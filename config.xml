<?xml version='1.0' encoding='utf-8'?>

	<widget 
		id="io.nickza.audiorecorder" 
		version="0.0.1" 
		xmlns="http://www.w3.org/ns/widgets" 
		xmlns:cdv="http://cordova.apache.org/ns/1.0" 
		versionCode	= "1" 
		version    	= "1.0.0"  
	>
    <name>Audio Recorder</name>
    <description>
        A Cordova application that records telephone calls.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Nick Orpen
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
      <feature name="AudioRecorder">
        <param name="android-package" value="com.nickza.audiorecorder.AudioRecorder" />
      </feature>

  	<icon src="www/img/logo.png" gap:role="default"/>
	<icon src="www/img/logo36.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="www/img/logo48.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="www/img/logo64.png" gap:platform="android" gap:qualifier="tvdpi" />
	<icon src="www/img/logo72.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="www/img/logo96.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="www/img/logo144.png" gap:platform="android" gap:qualifier="xxhdpi" />
	<icon src="www/img/logo192.png" gap:platform="android" gap:qualifier="xxxhdpi" />

</widget>
