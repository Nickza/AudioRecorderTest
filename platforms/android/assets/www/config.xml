<?xml version='1.0' encoding='utf-8'?>

	<widget 
		id="io.nickza.audiorecorder" 
		version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" 
	>
    <name>Audio Recorder</name>
    <description>
        A Test application that records telephone calls.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Nick Orpen
    </author>
    <content src="index.html" />
	<preference name="phonegap-version" value="3.7.0" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

	<icon src="img/logo.png" width="200" height="200"/>
	<feature name="AudioRecorder">
		<param name="android-package" value="com.nickza.audiorecorder.AudioRecorder" />
	</feature>

	
	
</widget>
