<?xml version='1.0' encoding='utf-8'?>
<widget id="io.nickza.audiorecorder" version="1.0.0" versionCode="1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="AudioRecorder">
        <param name="android-package" value="com.nickza.audiorecorder.AudioRecorder" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <name>Audio Recorder</name>
    <description>
        A Test application that records telephone calls.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Nick Orpen
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
